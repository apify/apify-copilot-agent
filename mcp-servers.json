{
  "mcpServers": {
    "apify": {
      "type": "local",
      "tools": [
        "fetch-actor-details",
        "search-actors",
        "call-actor",
        "search-apify-docs",
        "fetch-apify-docs",
        "get-actor-output"
      ],
      "command": "npx",
      "args": [
        "-y",
        "@apify/actors-mcp-server"
      ],
      "env": {
        "APIFY_TOKEN": "COPILOT_MCP_APIFY_TOKEN"
      }
    }
  }
}